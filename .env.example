# Example environment variables for local development
# Copy this file to .env and fill values before running docker compose or starting services

# Database
DATABASE_URL=postgresql://faceit:faceit@db:5432/faceit

# FastAPI / Uvicorn
API_HOST=0.0.0.0
API_PORT=8000

# Node/Next
NODE_ENV=development

# Any secret keys
SECRET_KEY=replace-with-a-secure-secret

# Redis
REDIS_URL=redis://localhost:6379

# Payment providers
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
SBP_API_URL=
SBP_TOKEN=

# AI Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Faceit API
FACEIT_API_KEY=

# Optional: Hugging Face
HUGGINGFACE_TOKEN=

# Testing
TEST_ENV=false
