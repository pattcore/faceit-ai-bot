# Faceit AI Bot - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# Application Settings
# ============================================
APP_TITLE="Faceit AI Bot Service"
APP_VERSION="0.4.0"
NODE_ENV=production

# ============================================
# Security (CRITICAL - Generate secure keys!)
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secure-random-key-min-32-chars-CHANGE-THIS
ALGORITHM=HS256

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://faceit_user:your_secure_password@db:5432/faceit_user
POSTGRES_USER=faceit_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=faceit_user

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# ============================================
# API Keys (REQUIRED)
# ============================================
# Get your key from: https://developers.faceit.com/
FACEIT_API_KEY=your_faceit_api_key_here

# Get your key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Optional AI services
ANTHROPIC_API_KEY=
HUGGINGFACE_TOKEN=

# ============================================
# CORS Settings
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://pattmsc.online,https://www.pattmsc.online

# ============================================
# Application URLs
# ============================================
WEBSITE_URL=https://pattmsc.online
API_URL=https://pattmsc.online/api
NEXT_PUBLIC_API_URL=https://pattmsc.online

# ============================================
# Payment Integration (Optional)
# ============================================
# YooKassa
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
YOOKASSA_API_URL=https://api.yookassa.ru/v3/payments

# SBP (Система быстрых платежей)
SBP_API_URL=
SBP_TOKEN=

# Tinkoff
SBP_TINKOFF_API_URL=https://securepay.tinkoff.ru/v2
SBP_TINKOFF_TOKEN=
SBP_TINKOFF_TERMINAL_KEY=

# Sberbank
SBP_SBERBANK_API_URL=https://api.sberbank.ru/qr
SBP_SBERBANK_TOKEN=

# VTB
SBP_VTB_API_URL=https://api.vtb.ru/qr
SBP_VTB_TOKEN=

# Alpha Bank
SBP_ALPHA_API_URL=https://alfabank.ru/api
SBP_ALPHA_TOKEN=

# Stripe (International)
STRIPE_API_URL=https://api.stripe.com
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# PayPal
PAYPAL_API_URL=https://api.paypal.com
PAYPAL_CLIENT_ID=
PAYPAL_SECRET_KEY=

# Crypto
BINANCE_API_KEY=
BINANCE_SECRET_KEY=
CRYPTO_API_URL=https://api.crypto.com
CRYPTO_API_KEY=
CRYPTO_SECRET_KEY=

# ============================================
# Monitoring & Logging (Optional)
# ============================================
SENTRY_DSN=
LOG_LEVEL=INFO

# ============================================
# Test Environment
# ============================================
TEST_ENV=false

# ============================================
# Notes
# ============================================
# 1. Never commit .env file to git!
# 2. Generate strong random keys for production
# 3. Keep API keys secret and rotate them regularly
# 4. Use different credentials for development/production
