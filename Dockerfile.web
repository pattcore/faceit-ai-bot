FROM node:20-slim AS builder
WORKDIR /app

# Build-time envs for Next.js (public runtime config)
ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_CAPTCHA_PROVIDER
ARG NEXT_PUBLIC_TURNSTILE_SITE_KEY
ARG NEXT_PUBLIC_SMARTCAPTCHA_SITE_KEY

ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL} \
    NEXT_PUBLIC_CAPTCHA_PROVIDER=${NEXT_PUBLIC_CAPTCHA_PROVIDER} \
    NEXT_PUBLIC_TURNSTILE_SITE_KEY=${NEXT_PUBLIC_TURNSTILE_SITE_KEY} \
    NEXT_PUBLIC_SMARTCAPTCHA_SITE_KEY=${NEXT_PUBLIC_SMARTCAPTCHA_SITE_KEY}

# Install dependencies (no package-lock required)
COPY package*.json ./
RUN npm install

# Copy source
COPY . .

# Build Next.js and browser extension ZIP
RUN npm run build && npm run build:extension:zip

# Production image
FROM node:20-slim
WORKDIR /app

ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_CAPTCHA_PROVIDER
ARG NEXT_PUBLIC_TURNSTILE_SITE_KEY
ARG NEXT_PUBLIC_SMARTCAPTCHA_SITE_KEY

ENV NODE_ENV=production \
    NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL} \
    NEXT_PUBLIC_CAPTCHA_PROVIDER=${NEXT_PUBLIC_CAPTCHA_PROVIDER} \
    NEXT_PUBLIC_TURNSTILE_SITE_KEY=${NEXT_PUBLIC_TURNSTILE_SITE_KEY} \
    NEXT_PUBLIC_SMARTCAPTCHA_SITE_KEY=${NEXT_PUBLIC_SMARTCAPTCHA_SITE_KEY}

COPY package*.json ./
RUN npm install --omit=dev

COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public
COPY --from=builder /app/next.config.* ./
COPY --from=builder /app/app ./app
COPY --from=builder /app/src ./src

EXPOSE 3000

CMD ["npm", "start"]
